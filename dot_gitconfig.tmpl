[core]
	editor = nvim
[user]
	email = {{ .email | quote }}
	name = Tangtang Zhou
[alias]
	pfl = push --force-with-lease
	log1l = log --oneline
[push]
	default = current
	autoSetupRemote = true
[pull]
  rebase = true
[merge]
  tool = nvimdiff
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "vimdiff"]
  layout = "LOCAL,MERGED,REMOTE"
[credential "helperselector"]
	selected = manager
[init]
	defaultBranch = main
